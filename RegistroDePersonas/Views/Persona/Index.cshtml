@model List<RegistroDePersonas.Models.ViewModels.ListPersonaViewModel>
@{
    ViewBag.Title = "Registro";
}


<div class="row mb-3" style="text-align:right;padding:5px;">
    <div class="col-md-9 text-left">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-3 float-md-right">
        <a href="~/Persona/Nuevo" class="btn btn-primary">Agregar</a>
    </div>
</div>
<div class="row">
    
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Fecha De Nacimiento</th>
                <th class="text-center">Acciones</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.FechaDeNacimiento.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <a class="btn btn-secondary" href="~/Persona/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger ml-2" href="~/Persona/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table="table">
    </div>

</div>